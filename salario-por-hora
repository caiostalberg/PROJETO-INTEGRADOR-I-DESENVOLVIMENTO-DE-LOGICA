package estruturas.pkgdo.sequenciais;

import java.util.Scanner;
/**
 *
 * @author Caio-Stalberg
 */
public class SalarioPorHora {
     public static void main(String[] args) {

         Scanner console = new Scanner(System.in);
         
         String nomeFuncionario;
         double valorTrabalho;
         double qtdHorasTrabalho;
         double valorReceber;
         
         //Entrada
         System.out.println("Nome do funcionário:");
         nomeFuncionario = console.next();
         
         System.out.println("Valor da hora:");
         valorTrabalho = console.nextDouble();
         
         System.out.println("Quantas horas trabalhou?:");
         qtdHorasTrabalho = console.nextDouble();
         
         //Processamento
         valorReceber = valorTrabalho * qtdHorasTrabalho;
         
         //Saida
         System.out.println("O funcionário: " + nomeFuncionario + " trabalhou " + qtdHorasTrabalho + " horas por R$ " + valorTrabalho + " e deve receber R$ " + valorReceber + " ");
     }
}
    

