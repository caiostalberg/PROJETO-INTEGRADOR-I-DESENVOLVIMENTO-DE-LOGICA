package estruturas.pkgdo.sequenciais;
import java.util.Scanner;

/**
 *
 * @author Caio-Stalberg
 */
public class Temperatura {
    
    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        
        Scanner console = new Scanner(System.in);
        double temperaturaF;
        double temperaturaC;
        
        //Entradas
        System.out.println("Insira a temperatura em F°:");
        temperaturaF = Double.parseDouble(console.nextLine());
        
        //Processamento
        temperaturaC = (temperaturaF - 32) * 5 / 9 ;

        //Saida
        System.out.println("A temperatura em C° é: " + temperaturaC);
        
        
    }
}
